<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/add_news_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        android:hint="@string/enter_amount_of_news"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/dialog_action_btn"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_action_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/add"
        android:textAllCaps="true"
        android:layout_marginVertical="20dp"
        android:backgroundTint="#009688"
        app:layout_constraintEnd_toEndOf="@+id/add_news_et"
        app:layout_constraintStart_toStartOf="@+id/add_news_et"
        app:layout_constraintTop_toBottomOf="@id/add_news_et"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>