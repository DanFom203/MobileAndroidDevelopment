<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.SecondPageFragment">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/header_s2_text_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:textSize="24sp"
        android:text="@string/second_screen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/second_page_action_btn_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#009688"
        android:text="@string/to_third_screen"
        android:textAllCaps="true"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintBottom_toTopOf="@id/second_page_action_btn_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_s2_text_tv" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/second_page_action_btn_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#009688"
        android:layout_marginHorizontal="16dp"
        android:text="@string/to_first_screen"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/second_page_action_btn_1" />


</androidx.constraintlayout.widget.ConstraintLayout>